<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finance Entry</title>
    <link rel="stylesheet" href="/css/add.css">
</head>
<body>
    <div class="form-container">
        <h1><span>Fin</span>Flow</h1>
        <h2>Finance Entry</h2>
        <form action="/add" method="post">
            <!-- Title -->
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" placeholder="Enter title" required>
            </div>
      
            <!-- Amount -->
            <div class="form-group">
                <label for="amount">Amount</label>
                <input type="number" name="amount" id="amount" placeholder="Enter amount" required>
            </div>
      
            <div class="form-group">
              <label for="Date">Date</label>
              <input type="date" name="title" id="title" placeholder="Enter the Date" required>
            </div>
      
            <!-- Option Dropdown -->
            <div class="form-group">
                <label for="option">Category</label>
                <select name="option" id="option">
                    <option value="">-- Select Option --</option>
                    <option value="expense">Expense</option>
                    <option value="income">Income</option>
                </select>
            </div>
      
            <!-- Income Options (Second Dropdown) -->
            <div class="form-group" id="expenseOptionsContainer">
                <label for="">Expense Source</label>
                <select name="expenseOption" id="expenseOptions">
                    <option value="Food">Food</option>
                    <option value="Transport">Transport</option>
                    <option value="Rent">Rent</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Others">Others</option>
                </select>
            </div>
      
            <div class="form-group" id="incomeOptionsContainer">
              <label for="incomeOptions">Income Source</label>
              <select name="incomeOption" id="incomeOptions">
                  <option value="Salary">Salary</option>
                  <option value="Investments">Investments</option>
                  <option value="Freelance">Freelance</option>
              </select>
          </div>
      
            <!-- Submit Button -->
            <button type="submit" id="button1">Submit</button>
      
        </form>
        </div>
        
<script src="./js/dropdown.js"></script>
</body>
</html>